<title>Library App - Home</title>
<% if (!type) {%>
  <header id="showcase">
    <div class="container">
      <div class="showcase-container">
        <div class="showcase-content">
          <h1>Welcome</h1>
          <p>Login to your account to access your data</p>
          <a class="btn btn-outline-light rounded mt-4" href="/login">Start</a>
        </div>
      </div>
    </div>
  </header>
  <% } %>
  <% if(type == 2) {%>
    <header id="showcase">
      <div class="container">
        <div class="showcase-container">
          <div class="showcase-content">
            <h2 class="mr-5">Welcome Again, <%= First_Name %></h2>
            <p>Enjoy our amazing collection of books!</p>
            <a class="btn btn-outline-light rounded mt-4" href="/users/available-books">Browse books</a>
          </div>
        </div>
      </div>
    </header>
    <% } else {%>
      <header id="showcase">
        <div class="container">
          <div class="showcase-container">
            <div class="showcase-content">
              <h2 class="mr-5">Welcome Again, <%= First_Name %></h2>
              <p>Go to your Dashboard to manage the platform..</p>
            </div>
          </div>
        </div>
      </header>
      <% } %>

<style>
  h1,h2 {
    color: #fff;
  }

  #showcase {
    height: 86vh;
    color: #fff;
    background: #333;
    position: relative;
  }

  #showcase::before {
    content: '';
    background: url(../img/lib.jpg) no-repeat center center/cover;
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    opacity: 0.3;
  }

  #showcase .showcase-container {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    justify-content: center;
    align-items: center;
    height: 50vh;
  }

  #showcase .container .showcase-container .showcase-content {
    z-index: 1;
  }

  @media screen and (min-width: 320px) {
    .showcase-content {
      margin-top: 20px;
    }
  }

</style>
    <script>
      const parentLi = document.getElementById('homeLi');
      parentLi.classList.add('active');
      const home = document.getElementById('home');
      home.appendChild(`<span class="sr-only">(current)</span>`);
    </script>
