<title>Library App - Librarian Dashboard</title>
<div class="container mb-5">
  <h1 class="mt-4 d-flex justify-content-between"><%= First_Name %><span class="lm-5 mb-2 lg-sm badge rounded-pill bg-warning">LIBRARIAN</span></h1>

  <%- include('./partials/messages') %>
</div>

<div class="container-lg ml-6">
  <div class="d-flex justify-content-between">
    <div><h4>Books</h4></div>
    <button type="button" 
                class="btn btn-info" 
                data-toggle="modal" 
                data-target="#add-modal">Add Book
    </button>
  </div>
  <br>
  <br>
  <% let counter = 1; %>
  <% if(details) { %>
    <table class="table table-hover" id="table">
      <thead>
        <tr class="header">
          <th scope="col">ISBN</th>
          <th scope="col">Title</th>
          <th scope="col">Language</th>
          <th scope="col">Subject ID</th>
          <th scope="col">number of copies</th>
          <th scope="col">Availability</th> 
          <th scope="col">Publication Year</th>
          <th scope="col"> </th>
          <th scope="col"> </th>
          <th scope="col"> </th>
        </tr>
      </thead>
      <tbody class="items">
        <% details.forEach(function(item){ %>
            <tr class="table-light" id="<%= counter++ %> ">
              <td class="isbn row-data"><%= item.ISBN_Code %></td>
              <td class="title row-data"><%= item.Book_Title %></td>
              <td class="lang row-data"><%= item.Book_Language %></td>
              <td class="subject row-data"><%= item.Subject_ID %></td>
              <td class="copies row-data"><%= item.No_Of_Copies %></td>
              <td class="available row-data"><%= item.Is_Available %></td>
              <td class="pub row-data"><%= item.Publication_Year %></td>
              <td><button type="button" 
                class="btn btn-light" 
                data-toggle="modal" 
                data-target="#edit-modal">Edit</button></td>
              <td><button type="button" 
                class="btn btn-danger" 
                data-toggle="modal" 
                data-target="#delete-modal">Delete</button></td>
            </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>
</div>