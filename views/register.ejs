<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-plus"></i> Register
      </h1>
      <%- include ("./partials/messages"); %>
      <form action="/register" method="POST">
        <div class="form-group">
          <label for="firstName">First Name</label>
          <input
            id="firstName"
            name="firstName"
            class="form-control"
            placeholder="Enter Name"
            value="<%= typeof firstName != 'undefined' ? firstName : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="lastName">last Name</label>
          <input
            id="lastName"
            name="lastName"
            class="form-control"
            placeholder="Enter Name"
            value="<%= typeof lastName != 'undefined' ? lastName : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="peopleId">ID</label>
          <input
            id="peopleId"
            name="peopleId"
            class="form-control"
            placeholder="Enter an ID"
            value="<%= typeof peopleId != 'undefined' ? peopleId : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="date">Birth Date</label>
          <input
            type="date"
            id="date"
            name="date"
            class="form-control"
            value="<%= typeof date != 'undefined' ? date : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="sex">Sex</label>
          <input
            id="sex"
            name="sex"
            class="form-control"
            value="<%= typeof sex != 'undefined' ? sex : '' %>"
          />
        </div>

        <div class="form-group">
          <label for="department">Department</label>
          <input
            id="department"
            name="department"
            class="form-control"
            placeholder="Enter department"
            value="<%= typeof department != 'undefined' ? department : '' %>"
          />
        </div>

        <div class="form-group">
          <label for="number">Contact Number</label>
          <input
            type="phone"
            id="number"
            name="number"
            class="form-control"
            placeholder="Enter a phone number"
            value="<%= typeof number != 'undefined' ? number : '' %>"
          />
        </div>

        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
            value="<%= typeof email != 'undefined' ? email : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Create Password"
            value="<%= typeof password != 'undefined' ? password : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password2">Confirm Password</label>
          <input
            type="password"
            id="password2"
            name="password2"
            class="form-control"
            placeholder="Confirm Password"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">
          Register
        </button>
      </form>
      <p class="lead mt-4">Have An Account? <a href="/users/login">Login</a></p>
    </div>
  </div>
</div>